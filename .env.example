# ===== Application Configuration =====
NODE_ENV=development
PORT=3000

# ===== Database Configuration =====
POSTGRES_DB=mangamotion
POSTGRES_USER=mmuser
POSTGRES_PASSWORD=mmsecret

# ===== Redis Configuration =====
REDIS_URL=redis://redis:6379

# ===== MinIO (S3-compatible) Configuration =====
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1
S3_BUCKET=mm-bucket
S3_FORCE_PATH_STYLE=true

# ===== File Upload Configuration =====
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,bmp,webp,mp4,avi,mov,mkv
ALLOWED_CONTENT_TYPES=image/jpeg,image/png,image/gif,image/bmp,image/webp,video/mp4,video/x-msvideo,video/quicktime,video/x-matroska
USER_UPLOAD_QUOTA_MB=500
QUOTA_WINDOW_HOURS=1

# ===== Rate Limiting =====
RATE_LIMIT_JOBS_PER_MINUTE=10

# ===== ClamAV Malware Scanning =====
CLAMAV_ENABLED=true
CLAMAV_HOST=clamav
CLAMAV_PORT=3310
CLAMAV_TIMEOUT_MS=30000
SCAN_ON_UPLOAD=true

# ===== Tracing (OpenTelemetry + Jaeger) =====
TRACING_ENABLED=true
JAEGER_HOST=jaeger
JAEGER_PORT=6831
JAEGER_SAMPLER=const
JAEGER_SAMPLER_PARAM=1.0
SERVICE_NAME=mangamotion-backend

# ===== Logging =====
LOG_LEVEL=info
LOG_FORMAT=json

# ===== Worker Configuration =====
WORKER_SECRET=dev-secret
JWT_SECRET=your-jwt-secret-key-change-in-production
SCAN_WORKER_CONCURRENCY=2

# ===== Grafana Configuration =====
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ===== pgAdmin Configuration =====
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# ===== Production Overrides (DO NOT USE IN LOCAL DEV) =====
# Uncomment and set these for production deployments
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# VAULT_ADDR=https://vault.example.com
# VAULT_TOKEN=your-token
